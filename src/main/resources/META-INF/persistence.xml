<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="emaillistPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>model.User</class>

        <properties>
            <!-- Cấu hình kết nối Database -->
            <property name="jakarta.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlserver://localhost;instanceName=SQLDEV;databaseName=murachdb;encrypt=false"/>
            <property name="jakarta.persistence.jdbc.user" value="WebAppUser"/>
            <property name="jakarta.persistence.jdbc.password" value="123"/>

<!--            thêm-->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>

            <!-- (Tùy chọn) Các thuộc tính để xem log SQL -->
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>
</persistence>